{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "allowImportExportEverywhere": false,
        "ecmaFeatures": {
            "jsx": false
        }
    },
    "rules": {
        "prettier/prettier": "error",
        "curly": "error",
        "no-console": "warn",
        "no-debugger": "error",
        "no-var": "error",
        "no-lonely-if": "error"
    },
    "plugins": [
      "prettier"
    ]
}
